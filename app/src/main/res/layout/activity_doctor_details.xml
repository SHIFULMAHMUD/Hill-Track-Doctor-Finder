<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".activity.doctor.DoctorDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_30_dp">
        <include layout="@layout/toolbar_back"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/favouriteImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/_30_dp"
                android:background="@drawable/ic_favourite_outline"/>
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/userImageView"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.050000012" />
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/userImageView"
                app:layout_constraintStart_toStartOf="@+id/userImageView"
                app:layout_constraintEnd_toEndOf="@+id/userImageView"
                android:textSize="@dimen/_17_sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_5_dp"
                android:textColor="@color/black"/>
            <RatingBar
                android:id="@+id/ratingBarProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_marginTop="@dimen/_10_dp"
                app:layout_constraintTop_toBottomOf="@+id/nameTextView"
                app:layout_constraintStart_toStartOf="@+id/nameTextView"
                app:layout_constraintEnd_toEndOf="@+id/nameTextView"/>
            <LinearLayout
                android:id="@+id/ratingLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ratingBarProfile"
                app:layout_constraintStart_toStartOf="@+id/ratingBarProfile"
                app:layout_constraintEnd_toEndOf="@+id/ratingBarProfile"
                android:layout_marginTop="@dimen/_5_dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ratingHeadingTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rating"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12_sp" />
                <TextView
                    android:id="@+id/ratingTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/_5_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14_sp"/>
                <ImageButton
                    android:id="@+id/reviewImageButton"
                    android:layout_width="@dimen/_20_dp"
                    android:layout_height="@dimen/_20_dp"
                    android:layout_marginStart="@dimen/_10_dp"
                    android:background="@drawable/ic_edit_profile"/>
            </LinearLayout>

            <TextView
                android:id="@+id/infoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/ratingLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/_16_sp"
                android:text="@string/info"
                android:layout_marginTop="@dimen/_30_dp"
                android:layout_marginStart="@dimen/_20_dp"
                android:textColor="@color/black"/>
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2_dp"
                app:layout_constraintTop_toBottomOf="@+id/infoTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_20_dp"
                android:layout_marginEnd="@dimen/_30_dp"
                android:layout_marginTop="@dimen/_5_dp"
                android:background="@color/colorPrimary"/>
            <LinearLayout
                android:id="@+id/infoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/_30_dp"
                android:background="@drawable/border"
                android:padding="@dimen/_20_dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qualification"
                    android:textColor="@color/grey_60"
                    android:textSize="@dimen/_12_sp"/>
                <TextView
                    android:id="@+id/qualificationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14_sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/specialist"
                    android:textColor="@color/grey_60"
                    android:textSize="@dimen/_12_sp"
                    android:layout_marginTop="@dimen/_10_dp"/>
                <TextView
                    android:id="@+id/specialistTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14_sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_number"
                    android:textColor="@color/grey_60"
                    android:textSize="@dimen/_12_sp"
                    android:layout_marginTop="@dimen/_10_dp"/>
                <TextView
                    android:id="@+id/mobileTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14_sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="@color/grey_60"
                    android:textSize="@dimen/_12_sp"
                    android:layout_marginTop="@dimen/_10_dp"/>
                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14_sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/availability"
                    android:textColor="@color/grey_60"
                    android:textSize="@dimen/_12_sp"
                    android:layout_marginTop="@dimen/_10_dp"/>
                <TextView
                    android:id="@+id/availabilityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14_sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/consultation_time"
                    android:textColor="@color/grey_60"
                    android:textSize="@dimen/_12_sp"
                    android:layout_marginTop="@dimen/_10_dp"/>
                <TextView
                    android:id="@+id/consultTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14_sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/full_address"
                    android:textColor="@color/grey_60"
                    android:textSize="@dimen/_12_sp"
                    android:layout_marginTop="@dimen/_10_dp"/>
                <TextView
                    android:id="@+id/addressTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14_sp"/>
                <TextView
                    android:id="@+id/headingDistanceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/distance"
                    android:textColor="@color/grey_60"
                    android:textSize="@dimen/_12_sp"
                    android:layout_marginTop="@dimen/_10_dp"/>
                <TextView
                    android:id="@+id/distanceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14_sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/joining_date"
                    android:textColor="@color/grey_60"
                    android:textSize="@dimen/_12_sp"
                    android:layout_marginTop="@dimen/_10_dp"/>
                <TextView
                    android:id="@+id/joinDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14_sp"/>

                <TextView
                    android:id="@+id/seeReviewTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_reviews"
                    android:drawableStart="@drawable/ic_visibility"
                    android:drawablePadding="@dimen/_5_dp"
                    android:layout_marginTop="@dimen/_10_dp"
                    android:textSize="@dimen/_14_sp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <TextView
                android:id="@+id/contactViaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_via"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/infoLayout"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_20_dp"
                android:layout_marginTop="@dimen/_40_dp"/>
            <ImageButton
                android:id="@+id/phoneImageButton"
                android:layout_width="@dimen/_30_dp"
                android:layout_height="@dimen/_30_dp"
                android:layout_marginStart="@dimen/_10_dp"
                app:layout_constraintStart_toEndOf="@+id/contactViaTextView"
                app:layout_constraintTop_toTopOf="@+id/contactViaTextView"
                app:layout_constraintBottom_toBottomOf="@+id/contactViaTextView"
                android:background="@drawable/ic_phone"/>
            <ImageButton
                android:id="@+id/whatsappImageButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="@dimen/_30_dp"
                app:layout_constraintStart_toEndOf="@+id/phoneImageButton"
                app:layout_constraintTop_toTopOf="@+id/contactViaTextView"
                app:layout_constraintBottom_toBottomOf="@+id/contactViaTextView"
                android:background="@drawable/ic_whatsapp"/>
            <ImageButton
                android:id="@+id/emailImageButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/_30_dp"
                app:layout_constraintStart_toEndOf="@+id/whatsappImageButton"
                app:layout_constraintTop_toTopOf="@+id/contactViaTextView"
                app:layout_constraintBottom_toBottomOf="@+id/contactViaTextView"
                android:background="@drawable/ic_email"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    </androidx.core.widget.NestedScrollView>
