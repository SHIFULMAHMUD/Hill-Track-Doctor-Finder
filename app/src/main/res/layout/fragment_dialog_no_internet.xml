<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.NoInternetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/no_internet_connection_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="Whoops"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="4sp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:text="@string/no_internet_found"
            android:textSize="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/id_no_internet_tab_to_retry_btn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textAllCaps="false"
            android:text="@string/tap_to_retry"
            android:clickable="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_round_shaped"
            android:layout_marginBottom="4dp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>


    </LinearLayout>




</FrameLayout>